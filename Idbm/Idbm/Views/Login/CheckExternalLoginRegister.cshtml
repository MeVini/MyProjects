@using Idbm.LocalResource
@model Idbm.Models.Logins

@{
    ViewBag.Title = "ExternalLoginRegister";
}

<h4>You have been successfully authenticated with Facebook.Please mention your favourite genre</h4>
@using (Html.BeginForm("ExternalLoginRegister", "Login"))
{
<form>
    <div class="form-group">
        @Html.LabelFor(m => m.FavouriteGenre)
        @Html.RadioButtonFor(model => model.FavouriteGenre, "Fantasy") @Resource.Fantasy
        @Html.RadioButtonFor(model => model.FavouriteGenre, "Action") @Resource.Action
        @Html.RadioButtonFor(model => model.FavouriteGenre, "Adventure") @Resource.Adventure
        @Html.RadioButtonFor(model => model.FavouriteGenre, "Family-Drama") @Resource.FamilyDrama
        @Html.RadioButtonFor(model => model.FavouriteGenre, "Comedy") @Resource.Comedy
        <span class="text-danger">@Html.ValidationMessageFor(model => model.FavouriteGenre)</span>
    </div>
     <input type="submit" class="btn btn-default" value="Register" />
</form>
}
