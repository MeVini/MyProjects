@using Idbm.LocalResource
@using Recaptcha;
@using CaptchaMvc;

@model Idbm.Models.Logins

@{
    ViewBag.Title = "Logins";
}

<h3>@Resource.WelcometoImdb</h3>
<p>@Resource.Pleasetellusalittleaboutyou</p>

@using (Html.BeginForm("Register", "Login"))
{ 
    
    <fieldset>
        <legend>@Resource.SignUp</legend>
        <form>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { ID = "FirstName" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.FirstName)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { ID = "LastName" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.LastName)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { ID = "Email" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.Email)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.EditorFor(m => m.Password, new { ID = "Password" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.Password)</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.EditorFor(m => m.ConfirmPassword, new { ID = "ConfirmPassword" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.ConfirmPassword)</span>
            </div>
            <div class="form-group">
                @Resource.Areyouahuman
            </div>
            <div class="form-group">
                @Html.Raw(Html.GenerateCaptcha("captcha", "clean"))
                @Html.ValidationMessage("captcha")
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.FavouriteGenre)

                @Html.RadioButtonFor(model => model.FavouriteGenre, "Fantasy") @Resource.Fantasy
                @Html.RadioButtonFor(model => model.FavouriteGenre, "Action") @Resource.Action
                @Html.RadioButtonFor(model => model.FavouriteGenre, "Adventure") @Resource.Adventure
                @Html.RadioButtonFor(model => model.FavouriteGenre, "Family-Drama") @Resource.FamilyDrama
                @Html.RadioButtonFor(model => model.FavouriteGenre, "Comedy") @Resource.Comedy
                <span class="text-danger"> @Html.ValidationMessageFor(model => model.FavouriteGenre)</span>
            </div>


            <input type="submit" class="btn btn-default" value="@Resource.SignUp" />
            <h5>@Resource.Alreadyamember @Html.ActionLink(@Resource.Login1, "AlreadyRegistered", "Login")</h5>
        </form>

    </fieldset>
   
}

@Scripts.Render("~/bundles/jqueryval")

